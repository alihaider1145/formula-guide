{
  "chapter": "Complex Numbers",
  "content": [
    {
      "card_title": "Equality of complex numbers",
      "card_math": "If z₁ = z₂, then |z₁| = |z₂| and arg(z₁) = arg(z₂)",
      "card_other": ""
    },
    {
      "card_title": "Modulus equality",
      "card_math": "|z₁| = |z₂| ⟹ z₁·z̄₂ = z̄₁·z₂",
      "card_other": ""
    },
    {
      "card_title": "Addition of complex numbers",
      "card_math": "z₁ + z₂ = (a₁+a₂) + i(b₁+b₂)",
      "card_other": ""
    },
    {
      "card_title": "Subtraction of complex numbers",
      "card_math": "z₁ - z₂ = (a₁-a₂) + i(b₁-b₂)",
      "card_other": ""
    },
    {
      "card_title": "Multiplication (OR MULTIPLY YOURSELF)",
      "card_math": "z₁ = a+bi, z₂ = c+di ⟹ z₁z₂ = (ac-bd) + i(ad+bc)",
      "card_other": ""
    },
    {
      "card_title": "Division (RATIONALIZE)",
      "card_math": "\\frac{z₁}{z₂} = \\frac{a+bi}{c+di} · \\frac{c-di}{c-di}",
      "card_other": ""
    },
    {
      "card_title": "Rationalization formula",
      "card_math": "\\frac{z₁}{z₂} = \\frac{(ac+bd) + i(bc-ad)}{c²+d²}",
      "card_other": "where n=1"
    },
    {
      "card_title": "Rationalization formula (general)",
      "card_math": "Re = \\frac{x₁x₂+y₁y₂+...}{x₂²+y₂²}, Im = \\frac{y₁x₂-x₁y₂+...}{x₂²+y₂²}",
      "card_other": "where n=2"
    },
    {
      "card_title": "Further rationalization",
      "card_math": "Re=(x₁-y₁)+(y₁-y₁)+..., Im=(x₁y₁+y₁)-(x₁(y₁-y₁))",
      "card_other": "where n=2"
    },
    {
      "card_title": "Final rationalization",
      "card_math": "Re:(x₁-y₁)(x₁-y₁)+(y₁+y₁), Im=(x₁y₁+y₁-x₁)(y₁-y₁)/(x₁²+y₁²)",
      "card_other": "where n=2"
    }
  ]
}