{
  "chapter": "16. Physics of Solids",
  "formulas": [
    {
      "formula_math": "\\sigma = \\frac{F}{A}",
      "formula_english": "Stress (tensile or compressive)."
    },
    {
      "formula_math": "\\varepsilon = \\frac{\\Delta L}{L}",
      "formula_english": "Strain (longitudinal)."
    },
    {
      "formula_math": "Y = \\frac{\\sigma}{\\varepsilon} = \\frac{FL}{A\\Delta L}",
      "formula_english": "Young's modulus."
    },
    {
      "formula_math": "K = -\\frac{\\Delta P}{\\Delta V / V}",
      "formula_english": "Bulk modulus."
    },
    {
      "formula_math": "G = \\frac{\\tau}{\\gamma}",
      "formula_english": "Shear modulus (rigidity modulus)."
    },
    {
      "formula_math": "\\tau = \\frac{F}{A}",
      "formula_english": "Shear stress."
    },
    {
      "formula_math": "\\gamma = \\frac{\\Delta x}{h}",
      "formula_english": "Shear strain."
    },
    {
      "formula_math": "E_g = E_C - E_V",
      "formula_english": "Energy band gap."
    }
  ]
}